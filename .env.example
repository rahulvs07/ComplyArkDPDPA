# ComplyArk Application Environment Variables

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/complyark

# Email Configuration
EMAIL_ENABLED=true
EMAIL_TEST_MODE=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=noreply@complyark.com
DEFAULT_FROM_NAME=ComplyArk Notifications

# Authentication
SESSION_SECRET=your-session-secret-key

# Application Settings
PORT=5000
NODE_ENV=development